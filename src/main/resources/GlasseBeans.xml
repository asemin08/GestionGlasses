<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd"
>
    <context:property-placeholder location="classpath:datasource.properties" />

    <bean id="glasseDao" class="eu.ensup.gestionglasses.dao.GlasseDao" init-method="initialisation" destroy-method="destruction">
        <property name="jdbcTemplate" ref="jdbcTemplate"></property>
    </bean>


    <bean id="glasseService" class="eu.ensup.gestionglasses.service.GlasseService" init-method="initialisation" destroy-method="destruction">
        <property name="iDao" ref="glasseDao"></property>
    </bean>

    <bean id="bdd" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="${database.driver}" />
        <property name="url" value="${database.url}" />
        <property name="username" value="${database.username}" />
        <property name="password" value="${database.password}" />
    </bean>

    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="bdd" />
    </bean>

</beans>